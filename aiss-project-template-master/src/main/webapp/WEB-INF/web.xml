<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <servlet>
    <description></description>
    <display-name>WeatherMusicController</display-name>
    <servlet-name>WeatherMusicController</servlet-name>
    <servlet-class>aiss.controller.weatherbit.WeatherMusicController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>WeatherMusicController</servlet-name>
    <url-pattern>/WeatherMusicController</url-pattern>
  </servlet-mapping>
    <servlet>
    <description></description>
    <display-name>HolidaysMusicController</display-name>
    <servlet-name>HolidaysMusicController</servlet-name>
    <servlet-class>aiss.controller.calendarific.HolidaysMusicController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HolidaysMusicController</servlet-name>
    <url-pattern>/HolidaysMusicController</url-pattern>
  </servlet-mapping>
    <servlet>
    <description></description>
    <display-name>PlaylistController</display-name>
    <servlet-name>PlaylistController</servlet-name>
    <servlet-class>aiss.controller.deezer.PlaylistController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PlaylistController</servlet-name>
    <url-pattern>/PlaylistController</url-pattern>
  </servlet-mapping>
    <servlet>
    <description></description>
    <display-name>LoginCalendarController</display-name>
    <servlet-name>LoginCalendarController</servlet-name>
    <servlet-class>aiss.controller.googlecalendar.LoginCalendarController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginCalendarController</servlet-name>
    <url-pattern>/LoginCalendarController</url-pattern>
  </servlet-mapping>
    <servlet>
    <description></description>
    <display-name>CalendarController</display-name>
    <servlet-name>CalendarController</servlet-name>
    <servlet-class>aiss.controller.googlecalendar.CalendarController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CalendarController</servlet-name>
    <url-pattern>/CalendarController</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
    <error-page>
    <exception-type>java.lang.Throwable</exception-type>
    <location>/error.jsp</location>
  </error-page>
  <!-- GoogleCalendarAuthController-->
    <servlet>
        <description/>
        <servlet-name>GoogleCalendarAuthController</servlet-name>
        <servlet-class>aiss.controller.oauth.GenericAuthController</servlet-class>
        <init-param>
            <param-name>provider</param-name>
            <param-value>GoogleCalendar</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>GoogleCalendarAuthController</servlet-name>
        <url-pattern>/AuthController/GoogleCalendar</url-pattern>
    </servlet-mapping>
    <!--GoogleCalendarOAuth2Callback-->
            <servlet>
        <description/>
        <servlet-name>GoogleCalendarOAuth2Callback</servlet-name>
        <servlet-class>aiss.controller.oauth.OAuth2Callback</servlet-class>
        <init-param>
            <param-name>provider</param-name>
            <param-value>GoogleCalendar</param-value>
        </init-param>
        <init-param>
            <param-name>onSuccess</param-name>
            <param-value>redirect:/index.html</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>GoogleCalendarOAuth2Callback</servlet-name>
        <url-pattern>/oauth2callback/GoogleCalendar</url-pattern> 
    </servlet-mapping>
</web-app>